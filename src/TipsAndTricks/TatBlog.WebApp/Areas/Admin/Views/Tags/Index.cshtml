@model TatBlog.WebApp.Areas.Admin.Models.TagFilterModel
@{
    ViewData["PageTitle"] = "Danh sách thẻ";

    var tagsList = ViewBag.TagsList as IPagedList<TagItem>;
}

<h1>
    Danh sách thẻ
</h1>

<!-- Hiển thị Form đề tìm bài viết -->
<partial name="_TagFilterPane" model="@Model" />




@if (tagsList != null && tagsList.Count > 0)
{
    <table class="table table-responsive table-striped">
        <thead>
            <tr>
                <th>Thẻ</th>
                <th>Mô tả</th>
                <th>Số lượng</th>
                <th>Xóa</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var tag in tagsList)
            {
                <tr>
                    <td>
                        <a asp-area="Admin"
                   asp-controller="Tags"
                   asp-action="Edit"
                   asp-route-id="@tag.Id"
                           class="text-bold">
                            @tag.Name
                        </a>

                        <p class="text-muted">
                            @tag.Description
                        </p>
                    </td>
                    <td class="col-1">
                        @tag.PostCount
                    </td>
                    <td class="col-1">
                        <a asp-area="Admin"
                   asp-controller="Tags"
                   asp-action="DeleteTag"
                   asp-route-id=@tag.Id
                           onclick="return confirm('Bạn có thực sự muốn xóa thẻ này không?')"
                           class="text-danger">
                            Xóa
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <partial name="_Pager" model="@tagsList" />
}
else
{
    <h1 class="text-danger">
        Không tìm thấy chủ đề nào
    </h1>
}
