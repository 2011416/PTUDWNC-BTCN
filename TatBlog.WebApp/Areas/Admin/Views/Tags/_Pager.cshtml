@model IPagedList<TagItem>

@if (Model.PageCount > 1)
{
    <div class="text-center my-4">
        @if (Model.HasPreviousPage)
        {
            <a asp-area="Admin"
       asp-controller="Tags"
       asp-action="Index"
       asp-route-p="@(Model.PageNumber -1)"
       asp-route-ps="@Model.PageSize"
               class="btn btn-info">
                <i class="fa fa-arrow-left"></i>
                Trang trước
            </a>
        }
        else
        {
            <button type="button"
                    clss="btn btn-outline-secondary"
                    disabled>
                <i class="fa fa-arrow-left"></i>
                Trang trước
            </button>
        }

        @if (Model.HasNextPage)
        {
            <a asp-area="Admin"
       asp-controller="Tags"
       asp-action="Index"
       asp-route-p="@(Model.PageNumber + 1)"
       asp-route-ps="@Model.PageSize"
               class="btn btn-info">
                Trang sau
                <i class="fa fa-arrow-right"></i>
            </a>
        }
        else
        {
            <button type="button"
                    class="btn btn-outline-secondary"
                    disabled>
                Trang sau
                <i class="fa fa-arrow-right"></i>
            </button>
        }
    </div>
}
