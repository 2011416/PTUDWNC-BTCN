@model IList<Author>

<div class="mb-4">
    <h3 class="text-success mb-2">
        Top 4 tác giả
    </h3>

    <ul class="list-group">
        @foreach (var author in Model)
        {
            <li class="list-group-item">

                <a asp-area=""
                    asp-controller="Blog"
               asp-action="Author"
               asp-route-slug=@author.UrlSlug
                   title=@author.Notes>
                    @author.FullName
                </a>
            </li>
        }
    </ul>

</div>